@model Binus.SampleWebAPI.Web.ViewModels.HomeViewModel

@{
    ViewBag.Title = "IT DIVISION Library";
}

<div class="container">
    <br />
    <h1>My Borrowed Books</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Book ID</th>
                <th>Book Name</th>
                <th>Book Desc</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Item in Model.borrow)
            {
                <tr>
                    <td>@Item.BookID</td>
                    <td>@Item.BookName</td>
                    <td>@Item.BookDesc</td>
                </tr>
            }

        </tbody>
    </table>
</div>